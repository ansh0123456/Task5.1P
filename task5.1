import tkinter as tk
import RPi.GPIO as GPIO

# Set up GPIO
GPIO.setmode(GPIO.BOARD)

# Define the GPIO pins for the LEDs
red_led_pin = 11
blue_led_pin = 13
green_led_pin = 15

# Set GPIO pins as outputs
GPIO.setup(red_led_pin, GPIO.OUT)
GPIO.setup(blue_led_pin, GPIO.OUT)
GPIO.setup(green_led_pin, GPIO.OUT)

# Initialize all pins to LOW (LEDs off)
GPIO.output(red_led_pin, GPIO.LOW)
GPIO.output(blue_led_pin, GPIO.LOW)
GPIO.output(green_led_pin, GPIO.LOW)

# Create the GUI
def turn_on_red_led():
    GPIO.output(red_led_pin, GPIO.HIGH)
    print("Red LED is now ON")

def turn_on_blue_led():
    GPIO.output(blue_led_pin, GPIO.HIGH)
    print("Blue LED is now ON")

def turn_on_green_led():
    GPIO.output(green_led_pin, GPIO.HIGH)
    print("Green LED is now ON")

def exit_app():
    GPIO.cleanup()  # Reset GPIO settings
    window.destroy()

# Initialize window
window = tk.Tk()
window.title("Raspberry Pi LED Control")

# Create buttons
btn1 = tk.Button(window, text="Turn on Red LED", command=turn_on_red_led)
btn1.pack(pady=10)

btn2 = tk.Button(window, text="Turn on Blue LED ", command=turn_on_blue_led)
btn2.pack(pady=10)

btn3 = tk.Button(window, text="Turn on Green LED ", command=turn_on_green_led)
btn3.pack(pady=10)

exit_btn = tk.Button(window, text="Exit", command=exit_app)
exit_btn.pack(pady=10)

# Start the GUI loop
window.mainloop()
